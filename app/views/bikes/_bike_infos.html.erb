<div class="bike-box">
<%= @bike.description %> <br>
Daily price: <%= humanized_money_with_symbol(@bike.price) %> <%# @bike.daily_price_in_cents / 100 %> <br>
Electric bike: <%= @bike.electric ? "yes" : "no" %> <br>
Address: <%= @bike.address %><br>
<% if @bike.user.name %>
Owner: <%= @bike.user.name %> <br>
<% end %>
<% if @bike.user.phone_number %>
Phone: <%= @bike.user.phone_number %> <br>
</div>
<% end %>
<br>
